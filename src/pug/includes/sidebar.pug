
mixin header(title)
  li.sidebar-header
    | #{title}

mixin item(title, href, icon, isActive = false)
  li.sidebar-item(class={active: isActive})
    a.sidebar-link(href=`${href}`)
      i.align-middle(data-feather=`${icon}`)
      span.align-middle #{title}

mixin subItem(title, href, icon, id)
  li.sidebar-item
    a.sidebar-link.collapsed(data-bs-target=`#${id}` data-bs-toggle='collapse')
      i(data-feather=`${icon}`)
      span.align-middle #{title}
    ul.sidebar-dropdown.list-unstyled.collapse(id=`${id}` data-bs-parent='#sidebar')
      block

mixin subLink(title, href)
  li.sidebar-item
    a.sidebar-link(href=`${href}`) #{title}

