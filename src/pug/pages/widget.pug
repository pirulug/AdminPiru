extends ../includes/layout

append config
  -pageName = 'Widget'

block content

  .card.mb-3
    .card-header
      h5.card-title.m-0 Info Box
    .card-body 
      .row
        .col-md-3.col-sm-6.col-12
          .info-box
            span.info-box-icon.bg-info
              i.far.fa-envelope
            .info-box-content
              span.info-box-text Messages
              span.info-box-number 1,410
        .col-md-3.col-sm-6.col-12
          .info-box
            span.info-box-icon.bg-success
              i.far.fa-flag
            .info-box-content
              span.info-box-text Bookmarks
              span.info-box-number 410
        .col-md-3.col-sm-6.col-12
          .info-box
            span.info-box-icon.bg-warning
              i.far.fa-copy
            .info-box-content
              span.info-box-text Uploads
              span.info-box-number 13,648
        .col-md-3.col-sm-6.col-12
          .info-box
            span.info-box-icon.bg-danger
              i.far.fa-star
            .info-box-content
              span.info-box-text Likes
              span.info-box-number 93,139

  .card.mb-3
