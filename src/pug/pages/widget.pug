          .info-box.shadow
            span.info-box-icon.bg-warning
              i.far.fa-copy
            .info-box-content
              span.info-box-text Shadows
              span.info-box-number Regular
        .col-md-3.col-sm-6.col-12
          .info-box.shadow-lg
            span.info-box-icon.bg-danger
              i.far.fa-star
            .info-box-content
              span.info-box-text Shadows
