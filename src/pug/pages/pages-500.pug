extends ../includes/auth-layout

append config
  -pageName = '500'

block content

  .container.d-flex.flex-column
    .row.vh-100
      .col-sm-10.col-md-8.col-lg-6.mx-auto.d-table.h-100
        .d-table-cell.align-middle
          .text-center
            h1.display-1.font-weight-bold.text-danger 500
            p.h1
              i.fas.fa-exclamation-triangle.text-danger.me-2
              | Oops! Something went wrong.
            p.font-weight-normal.mt-3.mb-4 
              | We will work on fixing that right away. Meanwhile, you may return to dashboard or try using the search form..
            form.search-form
              .input-group
                input.form-control(type='text' name='search' placeholder='Search')
                .input-group-append
                  button.btn.btn-danger(type='submit' name='submit')
                    i.fas.fa-search

            a.btn.btn-danger.btn-lg.mt-2(href='index.html') Return to website
